@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Create Role</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="form-group">
                <label class="control-label">Position</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <div class="form-row">
                <div class="form-group col">
                    <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-paper-plane"></i> Create</button>

                </div>
                <div class="form-group col">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-arrow-left"></i> Back to List</a>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


