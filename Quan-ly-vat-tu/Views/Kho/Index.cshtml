@model IEnumerable<Quan_ly_vat_tu.Models.Kho>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tenKho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.diaChi)
            </th>
            <th>
                <a asp-action="Create" class="btn btn-outline-success"><i class="fa fa-plus"></i> Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tenKho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diaChi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.maKho" class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
                @*<a asp-action="Details" asp-route-id="@item.maKho">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.maKho" class="btn btn-danger" onclick="return confirm('Are you sure to delete?')"><i class="fa fa-trash"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
